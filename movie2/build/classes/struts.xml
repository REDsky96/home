<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
  <constant name = "struts.devMode" value="true"/>
  <package name = "com.movie.comment.action" extends="struts-default">

    <action name = "NewCinemaParadise" class = "com.movie.comment.action.NewCinemaParadise" method = "execute">
      <result name = "success">newcinemaparadise.jsp</result>
    </action>

    <action name = "NewCinemaParadiseComplete" class = "com.movie.comment.action.NewCinemaParadiseComplete" method = "execute">
      <result name = "success">newcinemaparadisecomplete.jsp</result>
    </action>

    <action name = "GodFather" class = "com.movie.comment.action.GodFather" method = "execute">
      <result name =  "success">godfather.jsp</result>
    </action>

    <action name = "GodFatherComplete" class = "com.movie.comment.action.GodFatherComplete" method = "execute">
      <result name = "success">godfathercomplete.jsp</result>
    </action>

  </package>
</struts>
